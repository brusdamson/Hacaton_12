<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodel="clr-namespace:Hacaton_12.ViewModel"
             x:Class="Hacaton_12.View.StartPage"
             x:Name="StartPageView"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False" BackgroundImageSource="MainBackgrountImage.xml">
    <ContentPage.BindingContext>
        <viewmodel:StartPageListViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
        <StackLayout>
            <Label FontFamily="Irish" FontSize="65" Text="Hacolor" TextColor="White" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
            <CollectionView ItemsSource="{Binding Pictures}" ItemsLayout="VerticalGrid, 2">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Frame Padding="3" BackgroundColor="White" CornerRadius="20" Margin="20, 50, 20, 0">
                                <ImageButton WidthRequest="150" MinimumWidthRequest="150" HeightRequest="200" HorizontalOptions="Fill" BackgroundColor="Transparent" Source="{Binding Name}"
                                         Command="{Binding Source={x:Reference StartPageView}, Path=BindingContext.OpenPictureCommand}" 
                                         CommandParameter="{Binding .}"></ImageButton>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>

</ContentPage>